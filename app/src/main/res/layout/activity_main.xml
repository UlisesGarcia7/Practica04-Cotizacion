<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D15F5F"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#383F51"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Toyota Mazatlan"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Numero de Cotizacion: "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtNumCotizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ej: 0123"
                android:inputType="number"
                android:textColor="#808080"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Descripcion: "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Yaris SX"
                android:inputType="text"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textColor="#808080"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Precio: $"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ej: $220000"
                android:inputType="numberDecimal"
                android:paddingLeft="7dp"
                android:textColor="#808080"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Porcentaje de Pago Inicial: "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtPorcentajePagoInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ej: 25%"
                android:inputType="numberDecimal"
                android:paddingLeft="7dp"
                android:textColor="#808080"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Plazo de Meses: "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtPlazo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ej: 36"
                android:inputType="number"
                android:paddingLeft="7dp"
                android:textColor="#808080"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="15dp">

                <Button
                    android:id="@+id/btnReiniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#3F51B5"
                    android:paddingRight="20dp"
                    android:text="Reiniciar"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <Button
                    android:id="@+id/btnCalcular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#3F51B5"
                    android:paddingRight="20dp"
                    android:text="Calcular"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lblMostrarRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6F7593"
            android:fontFamily="sans-serif"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:gravity="center"
            android:text="Cerrar Aplicacion"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>